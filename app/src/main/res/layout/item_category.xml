<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/gray0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:layout_marginTop="10dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/parent.contentLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginLeft="5dp"
        card_view:cardBackgroundColor="@color/card_color"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/card_color"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:id="@+id/product_rlt"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content">


                <CheckBox
                    android:id="@+id/checkStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />

                <RelativeLayout
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/checkStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tvTaskName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/contentTextColor"
                        android:text="Task Name"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/contentTextColor"
                        android:text="12 Feb 2022"/>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/tvTaskName"
                        android:id="@+id/productCount"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTaskCategory"
                            android:layout_width="wrap_content"
                            android:maxWidth="100dp"
                            android:layout_height="wrap_content"
                            android:text="Category:"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/oragne"/>

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>