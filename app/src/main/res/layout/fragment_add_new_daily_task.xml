<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/daily_task"
    tools:context=".ui.AddNewDailyTaskFragment">


    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:text="@string/hello_blank_fragment">

       <LinearLayout
           android:padding="10dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/titleId"
               android:layout_centerHorizontal="true"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:textSize="20dp"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Add New Daily Task" />
           <EditText
               android:id="@+id/edTaskName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:hint="Enter Task Name" />

           <EditText
               android:id="@+id/edTaskCategory"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:hint="Enter Task Category" />
           <EditText
               android:id="@+id/edTaskDate"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:focusable="false"
               android:clickable="true"
               android:hint="Enter Task Date" />
           <EditText
               android:id="@+id/edTaskTime"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:focusable="false"
               android:clickable="true"
               android:hint="Enter Task Time" />

           <Button
               android:id="@+id/btnAdd"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="15dp"
               android:background="@color/color_blue"
               android:textColor="@color/white"
               android:text="Add New Task" />
       </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>